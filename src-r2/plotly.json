{
  "layout": {
    "title": {
      "text": "Time-Based Load Profile Visualization",
      "font": {
        "size": 24,
        "color": "#333333"
      },
      "x": 0.5,
      "xanchor": "center"
    },
    "xaxis": {
      "title": {
        "text": "Time<br>(Roll to zoom x,y axis)<br>(SHIFT+roll to zoom x-axis only)",
        "font": {
          "size": 16,
          "color": "#333333"
        }
      },
      "showgrid": true,
      "gridcolor": "#e6e6e6",
      "zeroline": false,
      "showline": true,
      "linecolor": "#cccccc"
    },
    "yaxis": {
      "title": {
        "text": "Load (KW)<br>(Roll to zoom x,y axis)<br>(SHIFT+roll to zoom y-axis only)",
        "font": {
          "size": 16,
          "color": "#333333"
        }
      },
      "showgrid": true,
      "gridcolor": "#e6e6e6",
      "zeroline": false,
      "showline": true,
      "linecolor": "#cccccc"
    },
    "legend": {
      "title": {
        "text": "Legend<br>Click to toggle traces",
        "font": {
          "size": 14,
          "color": "#333333"
        }
      },
      "bgcolor": "#f9f9f9",
      "bordercolor": "#e6e6e6",
      "borderwidth": 1
    },
    "hovermode": "x",
    "dragmode": "pan",
    "template": "plotly_white",
    "margin": {
      "l": 60,
      "r": 60,
      "t": 80,
      "b": 60
    }
  },
  "traces": {
    "main_load": {
      "line": {
        "color": "blue",
        "width": 1,
        "dash": "solid"
      },
      "name": "Load (kW)"
    },
    "daily_peak": {
      "mode": "lines+markers+text",
      "line": {
        "color": "blue",
        "width": 1,
        "dash": "solid"
      },
      "marker": {
        "color": "red",
        "size": 6,
        "symbol": "triangle-up"
      },
      "textposition": "top center",
      "name": "Daily Peak Load"
    },
    "target_datetime": {
      "line": {
        "color": "blue",
        "width": 2,
        "dash": "solid"
      },
      "name": "Target Datetime"
    },
    "85_load": {
      "line": {
        "color": "green",
        "width": 1,
        "dash": "dash"
      },
      "name": "85% Load"
    },
    "100_load": {
      "line": {
        "color": "orange",
        "width": 1,
        "dash": "dash"
      },
      "name": "100% Load"
    },
    "120_load": {
      "line": {
        "color": "red",
        "width": 1,
        "dash": "dash"
      },
      "name": "120% Load"
    },
    "peak_load": {
      "line": {
        "color": "purple",
        "width": 2,
        "dash": "solid"
      },
      "name": "Peak Load"
    },
    "temperature": {
      "line": {
        "color": "grey",
        "width": 1,
        "dash": "solid"
      },
      "name": "Temperature (Â°F)"
    },
    "cloud_cover": {
      "line": {
        "color": "lightblue",
        "width": 1,
        "dash": "solid"
      },
      "name": "Cloud Cover (%)"
    }
  },
  "annotations": {
    "warning": {
      "font": {
        "size": 14,
        "color": "red"
      },
      "bgcolor": "yellow",
      "bordercolor": "red",
      "borderwidth": 2
    },
    "target": {
      "font": {
        "size": 12,
        "color": "blue"
      },
      "bgcolor": "lightgray",
      "bordercolor": "blue",
      "borderwidth": 1
    },
    "peak": {
      "font": {
        "size": 12,
        "color": "purple"
      },
      "bgcolor": "lightgray",
      "bordercolor": "purple",
      "borderwidth": 1
    }
  }
}
